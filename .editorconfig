root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2

[build.gradle.kts]
indent_size = 4

[*.{kt,kts}]
ij_kotlin_allow_trailing_comma = false
ij_kotlin_allow_trailing_comma_on_call_site = false
ij_kotlin_packages_to_use_import_on_demand = java.util.*,kotlinx.coroutines.*
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^ 